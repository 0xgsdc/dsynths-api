{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./build/dist",
    "paths": {
      "*": ["./node_modules/*"]
    },
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2017",
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
